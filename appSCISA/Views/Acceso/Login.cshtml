
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link href="~/css/Login.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="card card-container">
            <!-- <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" /> -->
            <img id="profile-img" class="profile-img-card" src="~/images/logo/cvSCISA.png" />
            <p id="profile-name" class="profile-name-card"></p>
            <form action="@Url.Action("Login", "Acceso")" method="post" class="form-signin">
                <span id="reauth-email" class="reauth-email"></span>
                <input type="email" name="CorreoElectronico" id="inputEmail" class="form-control" placeholder="Correo" required autofocus>
                <input type="password" name="Contraseña" id="inputPassword" class="form-control" placeholder="Contraseña" required>

                @if (ViewData["Mensaje"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @ViewData["Mensaje"]
                    </div>
                }


                <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Ingresar</button>
            </form><!-- /form -->
            <p style="color: white">
                No tienes una cuenta?
                <a href="@Url.Action("Registrar", "Acceso")" class="forgot-password">
                    crea una
                </a>
            </p>
        </div><!-- /card-container -->
    </div><!-- /container -->

    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
</body>
</html>
